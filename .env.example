# ===========================================
# Mycel Backend — Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.

# --- Google Cloud Platform ---
# Your GCP project ID (required for Firestore + Vertex AI)
MYCEL_GCP_PROJECT_ID=your-project-id

# --- Vertex AI ---
# Region where Vertex AI Gemini models are available
# See: https://cloud.google.com/vertex-ai/generative-ai/docs/partner-models/use-partner-models#regions
VERTEX_AI_LOCATION=europe-west1

# Embedding model for vector search / RAG
MYCEL_EMBEDDING_MODEL=text-multilingual-embedding-002

# --- Server ---
PORT=3000
NODE_ENV=development

# --- CORS ---
# Comma-separated list of allowed origins (required for cross-origin requests)
# MYCEL_CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# --- Logging ---
# Options: fatal, error, warn, info, debug, trace
LOG_LEVEL=debug

# --- Local Development ---
# Use mock LLM client (no GCP credentials needed)
MYCEL_MOCK_LLM=true

# Firestore emulator (omit for real Firestore)
FIRESTORE_EMULATOR_HOST=localhost:8080

# --- Deployment (used by scripts/deploy.sh) ---
# GCP region for Cloud Run
# MYCEL_GCP_REGION=europe-west3

# --- E2E Testing (used by scripts/test-e2e.sh) ---
# GCP API key for Identity Platform anonymous auth
# Get from: GCP Console → APIs & Services → Credentials
# MYCEL_GCP_API_KEY=your-api-key
