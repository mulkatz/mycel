{
  "name": "mycel",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered Universal Knowledge Engine",
  "workspaces": [
    "packages/shared",
    "packages/schemas",
    "packages/ingestion",
    "packages/core"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "lint": "eslint 'packages/*/src/**/*.ts'",
    "typecheck": "tsc --build",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write 'packages/*/src/**/*.ts'",
    "format:check": "prettier --check 'packages/*/src/**/*.ts'",
    "clean": "npm run clean --workspaces && rm -f *.tsbuildinfo"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
